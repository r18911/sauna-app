<div class="auth-wrapper">
  <div class="auth-container">
    <h2>ログイン</h2>

    <% if flash[:alert].present? %>
      <div class="error-alert">
        <p><%= flash[:alert] %></p>
      </div>
    <% end %>
    
    <%= form_with model: resource, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレスを入力" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワードを入力" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-login" %>
      </div>
    <% end %>

    <p>アカウントをお持ちでない方？ <br><%= link_to "新規登録はこちら", new_user_registration_path, class: "sign-btn" %></p>
  </div>
</div>
<%= link_to "部屋一覧に戻る", rooms_path, class: "back-to-rooms-btn" %>