<div class="room-form-container">
  <h2>部屋の登録</h2>
  
  <%= form_with model: @room, local: true, class: "room-form" do |f| %>
    <div class="form-group">
      <%= f.label :name, "部屋名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :size, "広さ (㎡)" %>
      <%= f.number_field :size, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :bed_type, "ベッドタイプ" %>
      <%= f.text_field :bed_type, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :facilities, "設備" %>
      <%= f.text_field :facilities, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :capacity, "定員 (名)" %>
      <%= f.number_field :capacity, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "料金 (円)" %>
      <%= f.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :images, "部屋の画像" %>
      <%= f.file_field :images, multiple: true, class: "form-control-file" %>
    </div>

    <div class="form-group submit-btn d-flex gap-3">
      <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
      <%= link_to "戻る", rooms_path, class: "btn btn-secondary btn-lg" %>
    </div>
  <% end %>
</div>