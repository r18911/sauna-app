<%= form_with(model: @room, local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :name, "部屋名" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :size, "広さ (㎡)" %>
    <%= form.number_field :size, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bed_type, "ベッドタイプ" %>
    <%= form.text_field :bed_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :facilities, "設備" %>
    <%= form.text_field :facilities, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :capacity, "定員（名）" %>
    <%= form.number_field :capacity, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, "料金" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <!-- 画像アップロード -->
  <div class="form-group">
    <%= form.label :images, "部屋の画像" %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <%= form.submit "登録", class: "btn btn-primary" %>
<% end %>