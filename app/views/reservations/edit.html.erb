<div class="reservation-form-container">
  <h2>予約を変更</h2>

  <%= form_with model: @reservation, local: true do |f| %>
    <div class="form-group">
      <%= f.label :start_time, "チェックイン日時" %>
      <%= f.datetime_local_field :start_time, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :end_time, "チェックアウト日時" %>
      <%= f.datetime_local_field :end_time, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :number_of_people, "宿泊人数" %>
      <%= f.number_field :number_of_people, class: "form-control", min: 1, required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "更新する", class: "btn btn-primary btn-lg" %>
      <%= link_to "キャンセル", reservations_path, class: "btn btn-secondary btn-lg" %>
    </div>
  <% end %>
</div>